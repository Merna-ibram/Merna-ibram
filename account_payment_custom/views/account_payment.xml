<odoo>
    <!-- form view -->
    <record id="view_account_payment_form_inherit_price" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.price</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount']" position="after">
                <label for="price_before_tax" string="Price Before Tax"/>
                <field name="price_before_tax" readonly="1" string="Price Before Tax"/>
            </xpath>
        </field>
    </record>

    <!-- tree view -->
    <record id="view_account_payment_tree_inherit_price" model="ir.ui.view">
        <field name="name">account.payment.tree.inherit.price</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_company_currency_signed']" position="after">
                <field name="price_before_tax"
                       string="Price Before Tax"
                       widget="monetary"
                       options="{'currency_field': 'company_currency_id'}"
                       sum="Total Before Tax"
                       readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
