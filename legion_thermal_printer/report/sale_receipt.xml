<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_quotation_thermal_receipt" inherit_id="sale.report_saleorder_document">
        <xpath expr="." position="replace">
            <t t-call="web.external_layout" t-options="{'display_header': False}">
                <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                <style>
                    @page { size: 75mm auto; margin: 0; padding: 0; }
                    .receipt { width: 75mm; margin: 0; padding: 0.5mm; font-family: monospace; font-size: 8px; line-height: 1.1; }
                    .center { text-align: center; } .right { text-align: right; } .bold { font-weight: bold; }
                    .line { border-top: 1px dashed black; margin: 1mm 0; height: 0; }
                    .solid-line { border-top: 1px solid black; margin: 1mm 0; height: 0; }
                    .doc-title { text-align: center; font-weight: bold; font-size: 9px; margin: 1mm 0; }
                    .info-table { width: 100%; border-collapse: collapse; margin: 1mm 0; }
                    .info-table td { padding: 0 1mm; font-size: 8px; vertical-align: top; }
                    .info-table .label { width: 20mm; font-weight: bold; }
                    .products-table { width: 100%; border-collapse: collapse; font-size: 7px; margin: 1mm 0; }
                    .products-table th, .products-table td { padding: 0.5mm; text-align: left; line-height: 1.1; }
                    .products-table th { border-bottom: 1px solid black; font-weight: bold; }
                    .products-table .qty, .products-table .price, .products-table .total { text-align: right; }
                    .totals-table { width: 100%; border-collapse: collapse; font-size: 8px; margin: 1mm 0; }
                    .totals-table td { padding: 0.5mm 1mm; }
                    .totals-table .total-label { font-weight: bold; }
                    .totals-table .total-amount { text-align: right; font-weight: bold; }
                    .footer { text-align: center; font-size: 7px; margin-top: 2mm; border-top: 1px dashed black; padding-top: 1mm; }
                </style>

                <div class="receipt">
<!--                    <div class="center bold" t-field="doc.company_id.name"/>-->
<!--                    <div class="center" t-if="doc.company_id.phone">Tel: <span t-field="doc.company_id.phone"/></div>-->
<!--                    <div class="line"></div>-->

                    <div class="doc-title">
                        <t t-if="doc.state in ['draft','sent']">QUOTATION</t>
                        <t t-else="">SALES ORDER</t>
                        <br/><span t-field="doc.name"/>
                    </div>

                    <table class="info-table">
                        <tr><td class="label">Date:</td><td><span t-field="doc.date_order" t-options="{'widget':'date'}"/></td></tr>
                        <tr><td class="label">Customer:</td><td><span t-field="doc.partner_id.name"/></td></tr>
                        <tr t-if="doc.partner_id.phone"><td class="label">Phone:</td><td><span t-field="doc.partner_id.phone"/></td></tr>
                        <tr t-if="doc.client_order_ref"><td class="label">Ref:</td><td><span t-field="doc.client_order_ref"/></td></tr>
                    </table>

                    <div class="line"></div>

                    <table class="products-table">
                        <thead>
                            <tr><th>Item</th><th class="qty">Qty</th><th class="price">Price</th><th class="total">Total</th></tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.order_line" t-as="line">
                                <tr t-if="not line.display_type">
                                    <td><span t-field="line.name"/></td>
                                    <td class="qty" t-esc="int(line.product_uom_qty)"/>
                                    <td class="price" t-esc="'%.2f' % line.price_unit"/>
                                    <td class="total" t-esc="'%.2f' % line.price_subtotal"/>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <div class="solid-line"></div>

                    <table class="totals-table">
                        <tr><td class="total-label">Subtotal:</td><td class="total-amount" t-esc="'%.2f' % doc.amount_untaxed"/></tr>
                        <tr t-if="doc.amount_tax"><td class="total-label">Tax:</td><td class="total-amount" t-esc="'%.2f' % doc.amount_tax"/></tr>
                        <tr><td class="total-label">TOTAL:</td><td class="total-amount" t-esc="'%.2f' % doc.amount_total"/></tr>
                    </table>

                    <div class="footer">Thank you!</div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>

