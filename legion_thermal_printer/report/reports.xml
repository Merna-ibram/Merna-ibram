<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Invoice Format -->
        <record id="report_qweb_paperformat_invoice" model="report.paperformat">
            <field name="name">Account Invoice Report</field>
            <field name="default" eval="False"/>
            <field name="format">custom</field>
            <field name="page_height">130</field>
            <field name="page_width">75</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">6</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">96</field>
            <field name="disable_shrinking" eval="True"/>
        </record>

        <record id="account.account_invoices" model="ir.actions.report">
            <field name="paperformat_id" ref="report_qweb_paperformat_invoice"/>
            <field name="print_report_name">'Invoice - %s' % (object.name)</field>
        </record>

        <!-- Sale Order Format -->
        <record id="report_qweb_paperformat_sale" model="report.paperformat">
            <field name="name">Sale Order Report</field>
            <field name="default" eval="False"/>
            <field name="format">custom</field>
            <field name="page_height">130</field>
            <field name="page_width">75</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">96</field>
            <field name="disable_shrinking" eval="True"/>
        </record>

        <record id="sale.action_report_saleorder" model="ir.actions.report">
            <field name="paperformat_id" ref="report_qweb_paperformat_sale"/>
            <field name="print_report_name">'Sale Order - %s' % (object.name)</field>
        </record>

        <!-- Purchase Order Format -->
        <record id="report_qweb_paperformat_purchase" model="report.paperformat">
            <field name="name">Purchase Order Report</field>
            <field name="default" eval="False"/>
            <field name="format">custom</field>
            <field name="page_height">130</field>
            <field name="page_width">75</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">96</field>
            <field name="disable_shrinking" eval="True"/>
        </record>

        <record id="purchase.action_report_purchase_order" model="ir.actions.report">
            <field name="paperformat_id" ref="report_qweb_paperformat_purchase"/>
            <field name="print_report_name">'Purchase Order - %s' % (object.name)</field>
        </record>

        <!-- Delivery Slip / Picking Format -->
        <record id="report_qweb_paperformat_picking" model="report.paperformat">
            <field name="name">Stock Picking Report</field>
            <field name="default" eval="False"/>
            <field name="format">custom</field>
            <field name="page_height">130</field>
            <field name="page_width">75</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">96</field>
            <field name="disable_shrinking" eval="True"/>
        </record>

        <record id="stock.action_report_delivery" model="ir.actions.report">
            <field name="paperformat_id" ref="report_qweb_paperformat_picking"/>
            <field name="print_report_name">'Delivery Slip - %s' % (object.name)</field>
        </record>

    </data>
</odoo>


